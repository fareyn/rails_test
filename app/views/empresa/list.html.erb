<% if @empresas.blank? %>
<p>There are not any empresas currently in the system.</p>
<% else %>
<p>These are the current empresas in our system</p>

<ul id = "empresas">
   <% @empresas.each do |c| %>
   <li>
   <%= link_to c.nombre, {:action => 'show', :id => c.id} -%>
   <b> <%= link_to 'Edit', {:action => "edit",:id => c.id} %></b>
   <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
      :confirm => "Are you sure you want to delete this item?" %></b>
   </li>
   <% end %>
</ul>

<% end %>
